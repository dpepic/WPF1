<Window x:Class="Proba.Utakmica"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Proba"
        mc:Ignorable="d"
        Title="Utakmica" Height="450" Width="800" SizeToContent="WidthAndHeight" ResizeMode="NoResize">
    <StackPanel>
		<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
			<UniformGrid Columns="2">
				<Label>Tim:</Label>
				<TextBox Text="{Binding Path=Tim1}" MinWidth="100"/>
				<Label>Golovi:</Label>
				<TextBox Text="{Binding Path=Golovi1}" MinWidth="100"/>
			</UniformGrid>
			<UniformGrid Columns="2">
				<Label>Tim:</Label>
				<TextBox Text="{Binding Path=Tim2}" MinWidth="100"/>
				<Label>Golovi:</Label>
				<TextBox Text="{Binding Path=Golovi2}" MinWidth="100"/>
			</UniformGrid>
			
		</StackPanel>
		<StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
			<Button Content="Otkazi" Margin="100 0" Click="Izlaz"/>
			<Button Content="OK" Margin="100 0" Click="Unos"/>
		</StackPanel>

	</StackPanel>
</Window>
